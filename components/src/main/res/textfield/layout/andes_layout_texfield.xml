<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/andes_textfield_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/andes_texfield_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/andes_textfield_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/andes_texfield_label">

        <EditText
            android:id="@+id/andes_textfield_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/andes_transparent"
            android:textCursorDrawable="@drawable/andes_color_cursor"
            />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/andes_texfield_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/andes_textfield_text_container" />

    <TextView
        android:id="@+id/andes_texfield_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/andes_texfield_helper"
        app:layout_constraintTop_toBottomOf="@+id/andes_textfield_text_container" />

</android.support.constraint.ConstraintLayout>