<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/andes_tag_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/andes_tag_thumbnail_margin"
        app:layout_constraintBottom_toBottomOf="@+id/simple_tag_text"
        app:layout_constraintEnd_toStartOf="@+id/simple_tag_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/simple_tag_text" />

    <TextView
        android:id="@+id/simple_tag_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/andes_tag_small_text_margin"
        android:layout_marginEnd="@dimen/andes_tag_small_text_margin"
        android:text="asdasdasdas"
        android:textSize="@dimen/andes_tag_small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_content"
        app:layout_constraintStart_toEndOf="@+id/left_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/andes_tag_small_text_margin"
        app:layout_constraintBottom_toBottomOf="@+id/simple_tag_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/simple_tag_text"
        app:layout_constraintTop_toTopOf="@+id/simple_tag_text" />

</android.support.constraint.ConstraintLayout>