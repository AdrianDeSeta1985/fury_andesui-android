<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/andes_datepicker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Andes.Calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mercadolibre.android.andesui.button.AndesButton
        android:id="@+id/andesBtnSelectDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:andesButtonHierarchy="loud"
        app:andesButtonSize="large"
        app:andesButtonText="@string/andes_calendar_button"
        app:layout_constraintEnd_toEndOf="@+id/calendarView"
        app:layout_constraintStart_toStartOf="@+id/calendarView"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        android:layout_marginTop="24dp"/>

</android.support.constraint.ConstraintLayout>