<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/andes_dropdown_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/andes_dropdown_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/andes_textfield_label_text"
        android:paddingLeft="@dimen/andes_textfield_label_paddingLeft"
        android:textSize="@dimen/andes_textfield_label_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/andes_dropdown_text_container"
        app:layout_constraintTop_toBottomOf="@+id/andes_dropdown_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/andes_textfield_container_marginTop"
        android:minHeight="@dimen/andes_textfield_container_minHeight"
        android:addStatesFromChildren="true">


        <TextView
            android:id="@+id/andes_dropdown_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/andes_button_text"
            android:textColor="@color/andes_gray_800"
            android:textSize="@dimen/andes_textfield_edittext_textSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/andes_dropdown_chevron"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/andes_dropdown_text_container"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/andes_dropdown_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/andes_dropdown_text_container"
            app:layout_constraintEnd_toEndOf="@id/andes_dropdown_text_container"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/andes_dropdown_textview"
            app:layout_constraintTop_toTopOf="@id/andes_dropdown_text_container" />

    </android.support.constraint.ConstraintLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/andes_dropdown_icon"
        android:layout_width="@dimen/andes_textfield_icon_diameter"
        android:layout_height="@dimen/andes_textfield_icon_diameter"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:maxHeight="@dimen/andes_textfield_icon_diameter"
        android:minHeight="@dimen/andes_textfield_icon_diameter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/andes_dropdown_text_container" />

    <TextView
        android:id="@+id/andes_dropdown_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/andes_textfield_helper_marginTop"
        android:text="@string/andes_textfield_helper_text"
        android:textSize="@dimen/andes_textfield_helper_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/andes_dropdown_icon"
        app:layout_constraintTop_toBottomOf="@+id/andes_dropdown_text_container" />


</android.support.constraint.ConstraintLayout>