<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/andes_radiobutton_showcase"
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:baselineAligned="false">

            <com.mercadolibre.android.andesui.radiobutton.AndesRadiobutton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:andesRadiobuttonAlign="left"
                app:andesRadiobuttonStatus="selected"
                app:andesRadiobuttonText="@string/andes_radiobutton_showcase"/>

            <com.mercadolibre.android.andesui.radiobutton.AndesRadiobutton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:andesRadiobuttonAlign="right"
                app:andesRadiobuttonStatus="unselected"
                app:andesRadiobuttonText="@string/andes_radiobutton_showcase"/>

            <com.mercadolibre.android.andesui.radiobutton.AndesRadiobutton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:andesRadiobuttonAlign="left"
                app:andesRadiobuttonStatus="unselected"
                app:andesRadiobuttonType="disabled"
                app:andesRadiobuttonText="@string/andes_radiobutton_showcase"/>

            <com.mercadolibre.android.andesui.radiobutton.AndesRadiobutton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:andesRadiobuttonAlign="right"
                app:andesRadiobuttonStatus="selected"
                app:andesRadiobuttonType="disabled"
                app:andesRadiobuttonText="@string/andes_radiobutton_showcase"/>

            <com.mercadolibre.android.andesui.radiobutton.AndesRadiobutton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:andesRadiobuttonAlign="left"
                app:andesRadiobuttonType="error"
                app:andesRadiobuttonText="@string/andes_radiobutton_showcase"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/andesui_demoapp_label_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical_2x"
                android:text="@string/andesui_demoapp_label_more" />

            <com.mercadolibre.android.andesui.button.AndesButton
                android:id="@+id/andesui_demoapp_andes_radiobutton_specs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical"
                app:andesButtonHierarchy="quiet"
                app:andesButtonSize="medium"
                app:andesButtonText="@string/andesui_demoapp_label_andes_tag_specs"
                app:layout_constraintTop_toBottomOf="@id/andesui_demoapp_label_more" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>